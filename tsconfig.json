{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "http://localhost:8000/",
    "paths": {
      "@/*": ["./src/*.ts"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
